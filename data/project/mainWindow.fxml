<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="360" prefWidth="640" styleClass="background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.Controller">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints />
   </rowConstraints>
   <GridPane styleClass="background" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
      <Pane fx:id="MapPane" onMouseDragged="#onMouseDragged" onMousePressed="#onMousePressed" onScroll="#onScroll" GridPane.columnIndex="1" GridPane.hgrow="SOMETIMES" GridPane.vgrow="ALWAYS">
         <Group fx:id="MapTransform" />
      </Pane>
      <BorderPane styleClass="backgroundUI" GridPane.vgrow="ALWAYS">
         <bottom>
            <VBox alignment="TOP_CENTER">
               <Label text="00:00:00" fx:id="time">
                  <font>
                     <Font size="18.0" />
                  </font>
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </Label>
            <HBox minWidth="-Infinity" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="Jump Back" GridPane.columnIndex="0" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="Pause" GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="Jump Forward" GridPane.columnIndex="2" HBox.hgrow="ALWAYS" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </HBox>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </VBox>
         </bottom></BorderPane>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
   </GridPane>
   <BorderPane styleClass="statusbar" GridPane.rowIndex="1">
      <left>
         <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#loadDataButtonClick" text="LOAD DATA" textAlignment="CENTER" />
         </HBox>
      </left>
      <right>
         <Button contentDisplay="CENTER" layoutX="86.0" layoutY="20.0" mnemonicParsing="false" onAction="#resetView" text="RESET VIEW" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
      </right>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </BorderPane>
</GridPane>
